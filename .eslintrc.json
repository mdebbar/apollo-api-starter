{
  "extends": ["eslint:recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "impliedStrict": true,
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": [1, {
      "arrays": "always-multiline",
      "objects": "always-multiline",
      "functions": "never"
    }],
    "semi": [1, "never"],
    "no-console": "warn"
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": false
  }
}
